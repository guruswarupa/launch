<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather API Settings"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API Key"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/weather_api_key_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_field_background"
        android:hint="Enter OpenWeatherMap API Key"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/text"
        android:textColorHint="@color/nord3"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location (City, Country)"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/weather_location_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_field_background"
        android:hint="e.g. London, UK"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/text"
        android:textColorHint="@color/nord3"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature Unit"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />

    <RadioGroup
        android:id="@+id/temperature_unit_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/unit_celsius"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Celsius (°C)"
            android:textColor="@color/text"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/unit_fahrenheit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fahrenheit (°F)"
            android:textColor="@color/text"
            android:textSize="14sp" />

    </RadioGroup>

</LinearLayout>
