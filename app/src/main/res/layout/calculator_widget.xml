<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- History Section -->
    <LinearLayout
        android:id="@+id/history_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="History"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_clear_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/button_neutral_ripple"
                android:textColor="@color/white" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>

    <!-- Mode Selector -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btn_mode_basic"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="Basic"
            android:textSize="12sp"
            android:background="@drawable/button_selected_ripple"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_mode_scientific"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:text="Scientific"
            android:textSize="12sp"
            android:background="@drawable/button_selected_ripple"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_mode_converter"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Converter"
            android:textSize="12sp"
            android:background="@drawable/button_selected_ripple"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Display -->
    <EditText
        android:id="@+id/calculator_display"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/input_field_background"
        android:padding="16dp"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:gravity="end|center_vertical"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"
        android:text="0"
        android:layout_marginBottom="16dp" />

    <!-- Scientific Functions Panel -->
    <GridLayout
        android:id="@+id/scientific_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_sin"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="sin"
            android:textSize="12sp"
            android:background="@drawable/button_neutral_ripple"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_cos"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="cos"
            android:textSize="12sp"
            android:background="@drawable/button_neutral_ripple"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_tan"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="tan"
            android:textSize="12sp"
            android:background="@drawable/button_neutral_ripple"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_log"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="log"
            android:textSize="12sp"
            android:background="@drawable/button_neutral_ripple"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_ln"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="ln"
            android:textSize="12sp"
            android:background="@drawable/button_neutral_ripple"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_power"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="x^y"
            android:textSize="12sp"
            android:background="@drawable/button_neutral_ripple"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_sqrt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="√"
            android:textSize="14sp"
            android:background="@drawable/button_neutral_ripple"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_pi"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="π"
            android:textSize="14sp"
            android:background="@drawable/button_neutral_ripple"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_e"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="e"
            android:textSize="14sp"
            android:background="@drawable/button_neutral_ripple"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_factorial"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="n!"
            android:textSize="12sp"
            android:background="@drawable/button_neutral_ripple"
            android:textColor="@color/white" />
    </GridLayout>

    <!-- Converter Panel -->
    <LinearLayout
        android:id="@+id/converter_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="8dp">

        <!-- Converter Type Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btn_converter_unit"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Unit Converter"
                android:textSize="12sp"
                android:background="@drawable/button_selected_ripple"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_converter_base"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Base Converter"
                android:textSize="12sp"
                android:background="@drawable/button_selected_ripple"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Unit Converter Section -->
        <LinearLayout
            android:id="@+id/unit_converter_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <Spinner
                android:id="@+id/converter_category"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/input_field_background"
                android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/converter_input"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/input_field_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:hint="Value"
                android:inputType="numberDecimal"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/converter_from_unit"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/input_field_background"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="→"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginHorizontal="8dp" />

            <Spinner
                android:id="@+id/converter_to_unit"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:background="@drawable/input_field_background"
                android:padding="12dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

            <TextView
                android:id="@+id/converter_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:background="@drawable/input_field_background"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

        <!-- Base Converter Section -->
        <LinearLayout
            android:id="@+id/base_converter_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number Base Converter"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input Base:"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btn_input_decimal"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Decimal"
                    android:textSize="11sp"
                    android:background="@drawable/button_selected_ripple"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_input_binary"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="Binary"
                    android:textSize="11sp"
                    android:background="@drawable/button_selected_ripple"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_input_hex"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="Hex"
                    android:textSize="11sp"
                    android:background="@drawable/button_selected_ripple"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_input_octal"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Octal"
                    android:textSize="11sp"
                    android:background="@drawable/button_selected_ripple"
                    android:textColor="@color/white" />
            </LinearLayout>

            <EditText
                android:id="@+id/base_input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/input_field_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:hint="Enter number"
                android:inputType="text"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convert To:"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_base_decimal"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Decimal"
                    android:textSize="11sp"
                    android:background="@drawable/button_neutral_ripple"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_base_binary"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="Binary"
                    android:textSize="11sp"
                    android:background="@drawable/button_neutral_ripple"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_base_hex"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="Hex"
                    android:textSize="11sp"
                    android:background="@drawable/button_neutral_ripple"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_base_octal"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Octal"
                    android:textSize="11sp"
                    android:background="@drawable/button_neutral_ripple"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/base_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:background="@drawable/input_field_background"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>
    </LinearLayout>

    <!-- Button Grid -->
    <GridLayout
        android:id="@+id/button_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false">

        <!-- Row 1: Clear, Backspace, Divide, Multiply -->
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="C"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <Button
            android:id="@+id/btn_backspace"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="⌫"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="÷"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <Button
            android:id="@+id/btn_multiply"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="×"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <!-- Row 2: 7, 8, 9, Subtract -->
        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="7"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="8"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="9"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <Button
            android:id="@+id/btn_subtract"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="−"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <!-- Row 3: 4, 5, 6, Add -->
        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="4"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="5"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="6"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="+"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <!-- Row 4: 1, 2, 3, Equals -->
        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="1"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="2"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="3"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <Button
            android:id="@+id/btn_equals"
            android:layout_width="0dp"
            android:layout_height="124dp"
            android:layout_rowSpan="2"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="="
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <!-- Row 5: 0, Decimal -->
        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_margin="4dp"
            android:text="0"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

        <Button
            android:id="@+id/btn_decimal"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:text="."
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple" />

    </GridLayout>

</LinearLayout>
