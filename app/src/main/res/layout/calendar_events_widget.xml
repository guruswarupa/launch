<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_calendar"
            android:tint="@color/widget_text"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calendar Events"
            android:textColor="@color/widget_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calendar_view_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendar"
            android:textColor="@color/widget_text"
            android:background="@drawable/button_neutral_ripple"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- List View Container -->
    <LinearLayout
        android:id="@+id/calendar_list_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Events List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendar_events_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:clipToPadding="false"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />
    </LinearLayout>

    <!-- Calendar View Container -->
    <FrameLayout
        android:id="@+id/calendar_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- Empty State / Permission Prompt -->
    <LinearLayout
        android:id="@+id/calendar_empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No upcoming events"
            android:textColor="@color/widget_text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/request_calendar_permission_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grant Calendar Permission"
            android:textColor="@color/widget_text"
            android:background="@drawable/button_neutral_ripple"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
