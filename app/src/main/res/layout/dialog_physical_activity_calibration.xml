<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calibrate your stride length for more accurate distance measurements."
            android:textColor="@color/text"
            android:textSize="14sp"
            android:alpha="0.8"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height (cm)"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/height_input"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/input_field_background"
            android:hint="e.g. 175"
            android:inputType="number"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textColorHint="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stride Length (meters)"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/stride_length_input"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/input_field_background"
            android:hint="e.g. 0.75"
            android:inputType="numberDecimal"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text"
            android:textColorHint="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/current_stride_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current stride length: 0.75 m"
            android:textColor="@color/nord8"
            android:textSize="14sp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/reset_calibration_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_neutral_ripple"
            android:text="Reset to Default"
            android:textColor="@color/text"
            android:textAllCaps="false"
            android:paddingVertical="12dp" />

    </LinearLayout>
</ScrollView>