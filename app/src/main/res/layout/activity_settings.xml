<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Wallpaper Background -->
    <ImageView
        android:id="@+id/wallpaper_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wallpaper_background"
        android:contentDescription="Background"/>

    <!-- Semi-transparent overlay for better text visibility -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"/>

    <!-- Content Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"/>

            <!-- Weather API Key Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/weather_api_key_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Weather API Key"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/weather_api_key_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/weather_api_key_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <EditText
                        android:id="@+id/weather_api_key_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your OpenWeatherMap API key"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:alpha="0.7"
                        android:background="@drawable/rounded_background"
                        android:padding="16dp"
                        android:inputType="text"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get a free API key at: openweathermap.org/api"
                        android:textSize="11sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.6"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Currency Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/currency_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Currency"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/currency_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/currency_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <Spinner
                        android:id="@+id/currency_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_background"
                        android:padding="16dp"
                        android:minHeight="48dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Display Style Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/display_style_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Display Style"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/display_style_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/display_style_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/grid_option"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Grid View"
                            android:textAllCaps="false"
                            android:background="@drawable/button_background"
                            android:textColor="@android:color/white"
                            android:padding="16dp"/>

                        <Button
                            android:id="@+id/list_option"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="List View"
                            android:textAllCaps="false"
                            android:background="@drawable/button_background"
                            android:textColor="@android:color/white"
                            android:padding="16dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <!-- Backup & Restore Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/backup_restore_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Backup &amp; Restore"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/backup_restore_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/backup_restore_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/export_settings_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Export"
                            android:textAllCaps="false"
                            android:background="@drawable/button_background"
                            android:textColor="@android:color/white"
                            android:padding="16dp"/>

                        <Button
                            android:id="@+id/import_settings_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Import"
                            android:textAllCaps="false"
                            android:background="@drawable/button_background"
                            android:textColor="@android:color/white"
                            android:padding="16dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- App Usage Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/app_usage_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="App Usage"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/app_usage_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_usage_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/reset_usage_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reset Usage Count"
                        android:textAllCaps="false"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:padding="16dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Finance Data Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/finance_data_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Finance Data"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/finance_data_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/finance_data_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/reset_finance_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reset Finance Data"
                        android:textAllCaps="false"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:padding="16dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- App Lock Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/app_lock_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="App Lock"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/app_lock_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_lock_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/app_lock_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Configure App Lock"
                        android:textAllCaps="false"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:padding="16dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Permissions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/permissions_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Permissions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/permissions_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/permissions_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/check_permissions_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Handle Permissions"
                        android:textAllCaps="false"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:padding="16dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Launcher Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/launcher_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Launcher"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/launcher_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="▼"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:alpha="0.7"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/launcher_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/restart_launcher_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Restart Launcher"
                        android:textAllCaps="false"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:padding="16dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Save Button -->
            <Button
                android:id="@+id/save_settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Settings"
                android:textAllCaps="false"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>