<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Weather API Key Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weather API Key"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/weather_api_key_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your weather API key"
            android:textColor="@color/text"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/rounded_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:inputType="text" />

        <!-- Display Style Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display Style"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/display_style_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/grid_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grid View"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/list_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List View"
                android:textColor="@color/text"
                android:textSize="16sp" />

        </RadioGroup>

        <!-- Default Launcher Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default Launcher"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/set_default_launcher_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set as Default Launcher"
            android:background="@drawable/button_background"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Import/Export Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Backup &amp; Restore"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/export_settings_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Export Settings"
                android:background="@drawable/button_background"
                android:textColor="@color/text"
                android:textSize="14sp"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/import_settings_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Import Settings"
                android:background="@drawable/button_background"
                android:textColor="@color/text"
                android:textSize="14sp"
                android:padding="12dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Reset App Usage Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Usage"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/reset_usage_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Most Used App Count"
            android:background="@drawable/button_background"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Reset Finance Data Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finance Data"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/reset_finance_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Finance Data"
            android:background="@drawable/button_background"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- App Lock Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Lock"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/app_lock_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configure App Lock"
            android:background="@drawable/button_background"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/save_settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Settings"
            android:background="@drawable/button_background"
            android:textColor="@color/text"
            android:textSize="16sp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>