<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Highlight View - Shows a cutout around the target view -->
    <View
        android:id="@+id/tutorial_highlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="@drawable/tutorial_highlight"
        android:elevation="10dp" />

    <!-- Text Container -->
    <LinearLayout
        android:id="@+id/tutorial_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:orientation="vertical"
        android:background="@drawable/tutorial_text_background"
        android:padding="24dp"
        android:elevation="12dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tutorial_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feature Title"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tutorial_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feature description goes here"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Button Container for Skip/Next -->
        <LinearLayout
            android:id="@+id/tutorial_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/tutorial_skip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Skip Tutorial"
                android:textColor="@color/text_secondary"
                android:background="@drawable/button_neutral_ripple"
                android:textSize="14sp"
                android:paddingVertical="12dp" />

            <Button
                android:id="@+id/tutorial_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Next"
                android:textColor="@color/white"
                android:background="@drawable/button_neutral_ripple"
                android:textSize="14sp"
                android:paddingVertical="12dp" />
        </LinearLayout>

        <!-- Got It Button (shown only on last step) -->
        <Button
            android:id="@+id/tutorial_got_it"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Got it!"
            android:textColor="@color/white"
            android:background="@drawable/button_neutral_ripple"
            android:textSize="14sp"
            android:paddingVertical="12dp"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>
