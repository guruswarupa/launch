<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6000000">

    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="28dp"
        android:gravity="center"
        android:background="@drawable/rounded_background"
        android:backgroundTint="#FF1A1B26"
        android:elevation="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control Center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="28dp"
            android:letterSpacing="0.03"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="6"
            android:alignmentMode="alignMargins">

            <!-- Connectivity Row -->
            <LinearLayout
                android:id="@+id/btn_wifi"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_selected_ripple"
                android:layout_margin="4dp">
                <ImageView
                    android:id="@+id/img_wifi"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_wifi_stat"
                    android:tint="#FFFFFF"/>
                <TextView
                    android:id="@+id/txt_wifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi"
                    android:textColor="#B0FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_bluetooth"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_selected_ripple"
                android:layout_margin="4dp">
                <ImageView
                    android:id="@+id/img_bluetooth"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/stat_sys_data_bluetooth"
                    android:tint="#FFFFFF"/>
                <TextView
                    android:id="@+id/txt_bluetooth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bluetooth"
                    android:textColor="#B0FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_airplane"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_selected_ripple"
                android:layout_margin="4dp">
                <ImageView
                    android:id="@+id/img_airplane"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_airplane_stat"
                    android:tint="#FFFFFF"/>
                <TextView
                    android:id="@+id/txt_airplane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Airplane"
                    android:textColor="#B0FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Sliders Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="3"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="4dp">

                <!-- Brightness -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#1AFFFFFF"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_brightness_stat"
                        android:tint="#7AA2F7"/>
                    <SeekBar
                        android:id="@+id/brightness_seekbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="255"
                        android:progressTint="#7AA2F7"
                        android:thumbTint="#7AA2F7"
                        android:splitTrack="false"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>
                </LinearLayout>

                <!-- Volume -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#1AFFFFFF"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_volume_up_stat"
                        android:tint="#BB9AF7"/>
                    <SeekBar
                        android:id="@+id/volume_seekbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:progressTint="#BB9AF7"
                        android:thumbTint="#BB9AF7"
                        android:splitTrack="false"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Mode Controls Row -->
            <LinearLayout
                android:id="@+id/btn_sound"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_selected_ripple"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="4dp">
                <ImageView
                    android:id="@+id/img_sound"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_volume_up_stat"
                    android:tint="#FFFFFF"/>
                <TextView
                    android:id="@+id/txt_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sound"
                    android:textColor="#B0FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_dnd"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_selected_ripple"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="4dp">
                <ImageView
                    android:id="@+id/img_dnd"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_focus_mode_icon"
                    android:tint="#FFFFFF"/>
                <TextView
                    android:id="@+id/txt_dnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DND"
                    android:textColor="#B0FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_lock"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_selected_ripple"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="4dp">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_lock_idle_lock"
                    android:tint="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lock"
                    android:textColor="#B0FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <!-- Actions Row -->
            <LinearLayout
                android:id="@+id/btn_screenshot"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_selected_ripple"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="4dp">
                <ImageView
                    android:id="@+id/img_screenshot"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:tint="#FFFFFF"/>
                <TextView
                    android:id="@+id/txt_screenshot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Screenshot"
                    android:textColor="#B0FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_record"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_selected_ripple"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="4dp">
                <ImageView
                    android:id="@+id/img_record"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_slideshow"
                    android:tint="#FFFFFF"/>
                <TextView
                    android:id="@+id/txt_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Record"
                    android:textColor="#B0FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_power"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_selected_ripple"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="4dp">
                <ImageView
                    android:id="@+id/img_power"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_lock_power_off"
                    android:tint="#F7768E"/>
                <TextView
                    android:id="@+id/txt_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power"
                    android:textColor="#F7768E"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

        </GridLayout>

    </LinearLayout>
</FrameLayout>
