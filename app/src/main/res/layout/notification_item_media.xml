<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/notification_item_background"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:padding="12dp">

    <!-- Top row: Small app icon and time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/notification_app_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_default_app_icon"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2m ago"
            android:textColor="@color/text_secondary"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Big thumbnail - square with padding -->
    <ImageView
        android:id="@+id/notification_big_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@color/card_background"
        android:visibility="gone" />

    <!-- Media name below thumbnail -->
    <TextView
        android:id="@+id/notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Media Title"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/notification_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artist Name"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Centered action icons (smaller) -->
    <LinearLayout
        android:id="@+id/notification_actions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">
    </LinearLayout>

    <!-- Reply container (expanded) -->
    <LinearLayout
        android:id="@+id/notification_reply_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/notification_reply_background">

        <EditText
            android:id="@+id/notification_reply_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type a reply..."
            android:textColor="@color/white"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/notification_reply_input_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:textSize="14sp"
            android:imeOptions="actionSend"
            android:inputType="text" />

        <TextView
            android:id="@+id/notification_reply_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/notification_send_button"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>
