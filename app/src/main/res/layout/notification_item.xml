<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/notification_item_background"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:padding="12dp">

    <!-- Main notification content (horizontal) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/notification_app_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_default_app_icon"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop" />

        <!-- Large icon (if available) - smaller for message notifications -->
        <ImageView
            android:id="@+id/notification_large_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification Title"
                android:textColor="@color/widget_text"
                android:textSize="12sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/notification_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification text content"
                android:textColor="@color/widget_text_secondary"
                android:textSize="10sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:lineSpacingExtra="2dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2m ago"
            android:textColor="@color/widget_text_secondary"
            android:textSize="9sp"
            android:layout_marginStart="6dp" />
    </LinearLayout>

    <!-- Big picture (expanded) -->
    <ImageView
        android:id="@+id/notification_big_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <!-- Actions container (expanded) -->
    <LinearLayout
        android:id="@+id/notification_actions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:gravity="start|center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">
    </LinearLayout>

    <!-- Reply container (expanded) -->
    <LinearLayout
        android:id="@+id/notification_reply_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/notification_reply_background">

        <EditText
            android:id="@+id/notification_reply_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type a reply..."
            android:textColor="@color/widget_text"
            android:textColorHint="@color/widget_text_secondary"
            android:background="@drawable/notification_reply_input_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:textSize="14sp"
            android:imeOptions="actionSend"
            android:inputType="text" />
    </LinearLayout>
</LinearLayout>
