<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Wallpaper Background -->
    <ImageView
        android:id="@+id/wallpaper_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wallpaper_background"
        android:contentDescription="Background"/>

    <!-- Semi-transparent overlay for better text visibility - Dynamic -->
    <View
        android:id="@+id/onboarding_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/onboarding_overlay"/>

    <!-- Content Container -->
    <ScrollView
        android:id="@+id/onboarding_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Progress Indicator -->
            <LinearLayout
                android:id="@+id/progress_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp">

                <!-- Step 1 Indicator -->
                <View
                    android:id="@+id/step1_indicator"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circular_indicator"/>
                <View
                    android:id="@+id/step1_connector"
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:background="@color/onboarding_step_indicator_inactive"
                    android:layout_marginHorizontal="3dp"/>

                <!-- Step 2 Indicator -->
                <View
                    android:id="@+id/step2_indicator"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circular_indicator"/>
                <View
                    android:id="@+id/step2_connector"
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:background="@color/onboarding_step_indicator_inactive"
                    android:layout_marginHorizontal="3dp"/>

                <!-- Step 3 Indicator -->
                <View
                    android:id="@+id/step3_indicator"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circular_indicator"/>
                <View
                    android:id="@+id/step3_connector"
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:background="@color/onboarding_step_indicator_inactive"
                    android:layout_marginHorizontal="3dp"/>

                <!-- Step 4 Indicator -->
                <View
                    android:id="@+id/step4_indicator"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circular_indicator"/>
                <View
                    android:id="@+id/step4_connector"
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:background="@color/onboarding_step_indicator_inactive"
                    android:layout_marginHorizontal="3dp"/>

                <!-- Step 5 Indicator -->
                <View
                    android:id="@+id/step5_indicator"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circular_indicator"/>

            </LinearLayout>

            <!-- Step Content Container -->
            <FrameLayout
                android:id="@+id/step_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="400dp">

                <!-- Welcome Step -->
                <LinearLayout
                    android:id="@+id/welcome_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome to Launch!"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your powerful, customizable launcher is ready to transform your home screen experience."
                        android:textSize="16sp"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:alpha="0.9"
                        android:lineSpacingExtra="4dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="48dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Let's set it up in just a few simple steps:"
                        android:textSize="14sp"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:alpha="0.8"
                        android:layout_marginBottom="24dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="start"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✓ Data Privacy Disclosure"
                            android:textSize="14sp"
                            android:textColor="@color/onboarding_text"
                            android:alpha="0.9"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✓ Grant necessary permissions"
                            android:textSize="14sp"
                            android:textColor="@color/onboarding_text"
                            android:alpha="0.9"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✓ Set as default launcher"
                            android:textSize="14sp"
                            android:textColor="@color/onboarding_text"
                            android:alpha="0.9"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Data Privacy Step (Prominent Disclosure) -->
                <LinearLayout
                    android:id="@+id/data_privacy_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Privacy"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your privacy is our priority. Please review our data usage policy:"
                        android:textSize="16sp"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:layout_marginBottom="24dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginBottom="24dp"
                        android:backgroundTint="#22FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Installed Applications Disclosure"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/onboarding_text"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Launch collects and accesses the list of your Installed Applications to enable its core launcher functionality, specifically to display your apps on the home screen, organize them into workspaces, and allow universal search."
                                android:textSize="13sp"
                                android:textColor="@color/onboarding_text"
                                android:alpha="0.9"
                                android:lineSpacingExtra="4dp"
                                android:layout_marginBottom="12dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Data Commitment:"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/onboarding_text"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="• This data is processed locally on your device.\n• We do NOT upload or transmit your app list to any external servers.\n• We do NOT share this information with third parties."
                                android:textSize="13sp"
                                android:textColor="@color/onboarding_text"
                                android:alpha="0.9"
                                android:lineSpacingExtra="4dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="By clicking 'I Agree', you consent to the access of your installed applications list for these purposes."
                        android:textSize="12sp"
                        android:textColor="@color/onboarding_text_secondary"
                        android:gravity="center"
                        android:alpha="0.8"
                        android:paddingHorizontal="16dp"/>

                </LinearLayout>

                <!-- Permissions Step -->
                <LinearLayout
                    android:id="@+id/permissions_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Permissions"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We'll guide you through each permission request and explain why it's needed. You can skip any permission and grant it later if needed."
                        android:textSize="14sp"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:alpha="0.9"
                        android:lineSpacingExtra="4dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="32dp"/>

                </LinearLayout>

                <!-- Default Launcher Step -->
                <LinearLayout
                    android:id="@+id/default_launcher_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set as Default Launcher"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="To use this launcher as your home screen, you need to set it as the default launcher. This allows you to access your apps, widgets, and shortcuts directly from the home screen."
                        android:textSize="14sp"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:alpha="0.9"
                        android:lineSpacingExtra="4dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="32dp"/>

                </LinearLayout>

                <!-- Backup Import Step -->
                <LinearLayout
                    android:id="@+id/backup_import_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Import Backup"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Do you have a backup file from a previous installation? You can import your settings, favorites, workspaces, and all other data."
                        android:textSize="14sp"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:alpha="0.9"
                        android:lineSpacingExtra="4dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="32dp"/>

                    <Button
                        android:id="@+id/import_backup_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Import Backup"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="32dp"
                        android:paddingVertical="16dp"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="@color/nord7"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <!-- Display Style Step -->
                <LinearLayout
                    android:id="@+id/display_style_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose Display Style"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How would you like to view your apps?"
                        android:textSize="16sp"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:alpha="0.9"
                        android:layout_marginBottom="32dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <Button
                            android:id="@+id/grid_style_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Grid View"
                            android:textAllCaps="false"
                            android:background="@drawable/button_background"
                            android:textColor="@color/onboarding_text"
                            android:padding="16dp"/>

                        <Button
                            android:id="@+id/list_style_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="List View"
                            android:textAllCaps="false"
                            android:background="@drawable/button_background"
                            android:textColor="@color/onboarding_text"
                            android:padding="16dp"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Favorites Step -->
                <LinearLayout
                    android:id="@+id/favorites_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Favorite Apps"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose which apps you want to see by default. You can change this later in settings."
                        android:textSize="14sp"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:alpha="0.9"
                        android:lineSpacingExtra="4dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="16dp"/>

                    <com.guruswarupa.launch.ui.views.WrapContentRecyclerView
                        android:id="@+id/favorites_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="32dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:fadeScrollbars="true"
                        android:scrollbars="none"
                        android:background="@android:color/transparent"/>

                </LinearLayout>

                <!-- Workspaces Step -->
                <LinearLayout
                    android:id="@+id/workspaces_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Workspaces"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Organize your apps into workspaces. You can create multiple workspaces and switch between them."
                        android:textSize="14sp"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:alpha="0.9"
                        android:lineSpacingExtra="4dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/workspace_name_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Workspace name (e.g., Work, Personal)"
                            android:textSize="14sp"
                            android:textColor="@color/onboarding_input_text"
                            android:textColorHint="@color/onboarding_input_hint"
                            android:background="@color/onboarding_input_background"
                            android:alpha="0.9"
                            android:padding="12dp"
                            android:minHeight="48dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/workspaces_list_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Workspaces:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone"/>

                    <com.guruswarupa.launch.ui.views.WrapContentRecyclerView
                        android:id="@+id/workspaces_list_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:fadeScrollbars="true"
                        android:scrollbars="none"
                        android:background="@android:color/transparent"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select apps for workspace:"
                        android:textSize="14sp"
                        android:textColor="@color/onboarding_text"
                        android:alpha="0.9"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <com.guruswarupa.launch.ui.views.WrapContentRecyclerView
                        android:id="@+id/workspaces_apps_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="16dp"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:fadeScrollbars="true"
                        android:scrollbars="none"
                        android:background="@android:color/transparent"/>

                    <!-- Add Workspace Button - Now at bottom for better UX -->
                    <Button
                        android:id="@+id/add_workspace_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Workspace"
                        android:textAllCaps="false"
                        android:background="@drawable/button_background"
                        android:textColor="@color/onboarding_text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="24dp"
                        android:paddingVertical="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:minHeight="56dp"/>

                </LinearLayout>

                <!-- Weather API Key Step -->
                <LinearLayout
                    android:id="@+id/weather_api_key_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weather API Key (Optional)"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter your OpenWeatherMap API key to enable weather information on your home screen. You can skip this and add it later in Settings."
                        android:textSize="14sp"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:alpha="0.9"
                        android:lineSpacingExtra="4dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="24dp"/>

                    <EditText
                        android:id="@+id/weather_api_key_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter OpenWeatherMap API Key"
                        android:textSize="14sp"
                        android:textColor="@color/onboarding_input_text"
                        android:textColorHint="@color/onboarding_input_hint"
                        android:alpha="0.9"
                        android:background="@color/onboarding_input_background"
                        android:padding="16dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginBottom="16dp"
                        android:inputType="text"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get a free API key at: openweathermap.org/api"
                        android:textSize="12sp"
                        android:textColor="@color/onboarding_text_secondary"
                        android:gravity="center"
                        android:alpha="0.7"
                        android:layout_marginBottom="16dp"/>

                    <EditText
                        android:id="@+id/weather_location_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter city name (e.g., London, New York)"
                        android:textSize="14sp"
                        android:textColor="@color/onboarding_input_text"
                        android:textColorHint="@color/onboarding_input_hint"
                        android:alpha="0.9"
                        android:background="@color/onboarding_input_background"
                        android:padding="16dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginBottom="8dp"
                        android:inputType="text"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter the name of the city for weather information"
                        android:textSize="12sp"
                        android:textColor="@color/onboarding_text_secondary"
                        android:gravity="center"
                        android:alpha="0.7"
                        android:layout_marginBottom="32dp"/>

                </LinearLayout>

                <!-- Complete Step -->
                <LinearLayout
                    android:id="@+id/complete_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Set!"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your launcher is ready to use. Enjoy your new home screen experience!"
                        android:textSize="16sp"
                        android:textColor="@color/onboarding_text"
                        android:gravity="center"
                        android:alpha="0.9"
                        android:lineSpacingExtra="4dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="48dp"/>

                </LinearLayout>

            </FrameLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/back_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:background="@drawable/button_background"
                    android:textColor="@color/onboarding_text"
                    android:padding="16dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/next_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:background="@drawable/button_background"
                    android:textColor="@color/onboarding_text"
