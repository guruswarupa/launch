<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Wallpaper Background -->
        <ImageView
            android:id="@+id/wallpaper_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <!-- Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="top">
                
                <!-- Dummy view to take focus and prevent keyboard from opening by default -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <requestFocus />
                </View>

                <!-- Combined Widget Section -->
                <LinearLayout
                    android:id="@+id/top_widget_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/widget_background">

                    <!-- Time Widget -->
                    <TextView
                        android:id="@+id/time_widget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textColor="@color/widget_text"
                        android:gravity="center"
                        android:fontFamily="sans-serif-light"
                        android:letterSpacing="0.05"
                        android:paddingTop="8dp" />

                    <!-- Date Widget -->
                    <TextView
                        android:id="@+id/date_widget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/widget_text_secondary"
                        android:gravity="center"
                        android:fontFamily="sans-serif-light"
                        android:paddingTop="8dp" />

                    <!-- Weather Widget -->
                    <LinearLayout
                        android:id="@+id/weather_widget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="8dp">

                        <ImageView
                            android:id="@+id/weather_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Weather Icon"/>

                        <TextView
                            android:id="@+id/weather_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/widget_text_secondary"
                            android:fontFamily="sans-serif-light"/>
                    </LinearLayout>

                    <!-- Battery and Phone Usage Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:gravity="center">

                        <!-- Battery Widget -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/battery_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Battery: 100%"
                                android:textSize="14sp"
                                android:textColor="@color/widget_text_secondary"
                                android:fontFamily="sans-serif-light"/>
                        </LinearLayout>

                        <!-- Phone Usage Widget -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/screen_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Usage: 0m"
                                android:textSize="14sp"
                                android:textColor="@color/widget_text_secondary"
                                android:fontFamily="sans-serif-light"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Search Box -->
                <FrameLayout
                    android:id="@+id/search_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/search_box_transparent_bg">
                    <EditText
                        android:id="@+id/search_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/search_text"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:padding="12dp"
                        android:paddingEnd="48dp"
                        android:background="@null"
                        android:drawableStart="@drawable/ic_search"
                        android:drawablePadding="8dp"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:imeOptions="actionSearch"/>
                    <ImageButton
                        android:id="@+id/voice_search_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="end|center_vertical"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_mic"
                        android:contentDescription="Voice Search"/>
                </FrameLayout>

                <!-- App Dock -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/app_dock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingEnd="16dp"
                        android:layout_marginBottom="20px"/>
                </HorizontalScrollView>

                <!-- App List (RecyclerView) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/app_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>

    <!-- Sidebar Drawer for Widgets (Left Drawer) -->
    <FrameLayout
        android:id="@+id/widgets_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/background"
        android:clickable="true"
        android:focusable="true">

        <!-- Wallpaper Background for Drawer -->
        <ImageView
            android:id="@+id/drawer_wallpaper_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <!-- Settings Header -->
        <LinearLayout
            android:id="@+id/widget_settings_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <TextView
                android:id="@+id/widget_settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Widget Settings"
                android:textColor="@color/widget_text"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/widget_config_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_settings_icon"
                android:contentDescription="Configure Widgets" />
        </LinearLayout>

        <!-- Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingTop="88dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- Empty State Message -->
            <LinearLayout
                android:id="@+id/widgets_empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No widgets enabled"
                    android:textColor="@color/widget_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap 'Widget Settings' above to add and configure widgets"
                    android:textColor="@color/widget_text_secondary"
                    android:textSize="14sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Android Widgets Section -->
            <LinearLayout
                android:id="@+id/widgets_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/widget_background"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Android Widgets"
                        android:textColor="@color/widget_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/add_widget_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_neutral_ripple"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:text="Add Widget"
                        android:textColor="@color/widget_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/widget_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <!-- Notifications Widget -->
            <LinearLayout
                android:id="@+id/notifications_widget_main_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp">

                <FrameLayout
                    android:id="@+id/notifications_widget_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Calendar Events Widget -->
            <LinearLayout
                android:id="@+id/calendar_events_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp" />

            <!-- Countdown Widget -->
            <LinearLayout
                android:id="@+id/countdown_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp" />

            <!-- Physical Activity Widget -->
            <LinearLayout
                android:id="@+id/physical_activity_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp" />

            <!-- Compass Widget -->
            <LinearLayout
                android:id="@+id/compass_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp" />

            <!-- Pressure Widget -->
            <LinearLayout
                android:id="@+id/pressure_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp" />

            <!-- Proximity Widget -->
            <LinearLayout
                android:id="@+id/proximity_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp" />

            <!-- Temperature Widget -->
            <LinearLayout
                android:id="@+id/temperature_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp" />

            <!-- Network Stats Widget -->
            <LinearLayout
                android:id="@+id/network_stats_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp" />

            <!-- Device Info Widget -->
            <LinearLayout
                android:id="@+id/device_info_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp" />

            <!-- Noise Decibel Widget -->
            <LinearLayout
                android:id="@+id/noise_decibel_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp" />

            <!-- Workout Widget -->
            <LinearLayout
                android:id="@+id/workout_widget_main_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp">

                <FrameLayout
                    android:id="@+id/workout_widget_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Calculator Widget -->
            <LinearLayout
                android:id="@+id/calculator_widget_main_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Calculator"
                        android:textColor="@color/widget_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/calculator_widget_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- To Do Widget -->
            <LinearLayout
                android:id="@+id/todo_widget_main_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Todo List"
                        android:textColor="@color/widget_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/add_todo_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_neutral_ripple"
                        android:src="@drawable/ic_add"
                        android:contentDescription="Add todo item"
                        android:padding="8dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/todo_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="300dp"
                    android:clipToPadding="false"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            </LinearLayout>

            <!-- Finance Widget -->
            <LinearLayout
                android:id="@+id/finance_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:background="@drawable/widget_background"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Finance Tracker"
                        android:textColor="@color/widget_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/finance_currency_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/button_neutral_ripple"
                        android:paddingHorizontal="8dp" />
                </LinearLayout>

                <!-- Balance Card -->
                <LinearLayout
                    android:id="@+id/balance_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/balance_card_ripple"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Balance"
                        android:textColor="@color/widget_text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/balance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textColor="@color/widget_text"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/monthly_spent_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="This Month: -$0.00"
                            android:textColor="@color/widget_text_secondary"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Input Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/amount_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/input_field_background"
                        android:hint="Enter amount"
                        android:inputType="numberDecimal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:textColor="@color/widget_text"
                        android:textColorHint="@color/widget_text_secondary"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/description_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/input_field_background"
                        android:hint="Description (optional)"
                        android:inputType="text"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:textColor="@color/widget_text"
                        android:textColorHint="@color/widget_text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/add_income_btn"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_neutral_ripple"
                        android:text="Add Income"
                        android:textColor="@color/widget_text"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:elevation="4dp" />

                    <Button
                        android:id="@+id/add_expense_btn"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/button_neutral_ripple"
                        android:text="Add Expense"
                        android:textColor="@color/widget_text"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:elevation="4dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Weekly Usage Graph -->
            <LinearLayout
                android:id="@+id/weekly_usage_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="16dp"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weekly Usage"
                    android:textSize="18sp"
                    android:textColor="@color/widget_text"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_marginBottom="16dp"/>

                <com.guruswarupa.launch.WeeklyUsageGraphView
                    android:id="@+id/weekly_usage_graph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>

    <!-- Right Drawer for Wallpaper Only -->
    <FrameLayout
        android:id="@+id/wallpaper_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:clickable="true"
        android:focusable="true">

        <!-- Wallpaper Image View -->
        <ImageView
            android:id="@+id/right_drawer_wallpaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <!-- Clock Art Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="64dp"
            android:padding="24dp">

            <TextView
                android:id="@+id/right_drawer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="80sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-thin"
                android:letterSpacing="0.1"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:text="00:00"/>

            <TextView
                android:id="@+id/right_drawer_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.2"
                android:textAllCaps="true"
                android:layout_marginTop="-8dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="MONDAY, 01 JAN"/>
        </LinearLayout>
    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>
