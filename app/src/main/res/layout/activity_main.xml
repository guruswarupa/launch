<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Main Content -->
    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Wallpaper Background -->
        <ImageView
            android:id="@+id/wallpaper_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <!-- Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="top">

                <!-- Combined Widget Section -->
                <LinearLayout
                    android:id="@+id/top_widget_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/widget_background">

                    <!-- Time Widget -->
                    <TextView
                        android:id="@+id/time_widget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"
                        android:textColor="@color/text"
                        android:gravity="center"
                        android:fontFamily="sans-serif-light"
                        android:letterSpacing="0.05"
                        android:paddingTop="8dp" />

                    <!-- Date Widget -->
                    <TextView
                        android:id="@+id/date_widget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:fontFamily="sans-serif-light"
                        android:paddingTop="8dp" />

                    <!-- Weather Widget -->
                    <LinearLayout
                        android:id="@+id/weather_widget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="8dp">

                        <ImageView
                            android:id="@+id/weather_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Weather Icon"/>

                        <TextView
                            android:id="@+id/weather_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="sans-serif-light"/>
                    </LinearLayout>

                    <!-- Battery and Phone Usage Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:gravity="center">

                        <!-- Battery Widget -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/battery_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Battery: 100%"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="sans-serif-light"/>
                        </LinearLayout>

                        <!-- Phone Usage Widget -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/screen_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Usage: 0m"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="sans-serif-light"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Search Box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/search_box"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="@string/search_text"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:padding="12dp"
                        android:background="@drawable/search_box_transparent_bg"
                        android:drawableStart="@drawable/ic_search"
                        android:drawablePadding="8dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"
                        android:singleLine="true"
                        android:imeOptions="actionSearch"/>
                    <ImageButton
                        android:id="@+id/voice_search_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_mic"
                        android:contentDescription="Voice Search"/>
                </LinearLayout>

                <!-- App Dock -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/app_dock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingEnd="16dp"
                        android:layout_marginBottom="20px"/>
                </HorizontalScrollView>

                <!-- App List (RecyclerView) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/app_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>

    <!-- Sidebar Drawer for Widgets -->
    <FrameLayout
        android:id="@+id/widgets_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/background">

        <!-- Wallpaper Background for Drawer -->
        <ImageView
            android:id="@+id/drawer_wallpaper_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <!-- Gear Icon for Widget Configuration -->
        <ImageButton
            android:id="@+id/widget_config_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings_icon"
            android:tint="@color/white"
            android:contentDescription="Configure Widgets"
            android:elevation="4dp"/>

        <!-- Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- Android Widgets Section -->
            <LinearLayout
                android:id="@+id/widgets_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="72dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/widget_background"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Android Widgets"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/add_widget_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_neutral_ripple"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:text="Add Widget"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/widget_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <!-- Notifications Widget -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp">

                <FrameLayout
                    android:id="@+id/notifications_widget_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Calendar Events Widget -->
            <LinearLayout
                android:id="@+id/calendar_events_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="16dp" />

            <!-- Countdown Widget -->
            <LinearLayout
                android:id="@+id/countdown_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="16dp" />

            <!-- Physical Activity Widget -->
            <LinearLayout
                android:id="@+id/physical_activity_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="16dp" />

            <!-- Compass Widget -->
            <LinearLayout
                android:id="@+id/compass_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="16dp" />

            <!-- Pressure Widget -->
            <LinearLayout
                android:id="@+id/pressure_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="16dp" />

            <!-- Proximity Widget -->
            <LinearLayout
                android:id="@+id/proximity_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="16dp" />

            <!-- Temperature Widget -->
            <LinearLayout
                android:id="@+id/temperature_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="16dp" />

            <!-- Noise Decibel Widget -->
            <LinearLayout
                android:id="@+id/noise_decibel_widget_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="16dp" />

            <!-- Workout Widget -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp">

                <FrameLayout
                    android:id="@+id/workout_widget_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Calculator Widget -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Calculator"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/calculator_widget_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- To Do Widget -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:layout_marginVertical="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Todo List"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/add_todo_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_neutral_ripple"
                        android:src="@drawable/ic_add"
                        android:tint="@color/white"
                        android:contentDescription="Add todo item"
                        android:padding="8dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/todo_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="300dp"
                    android:clipToPadding="false"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            </LinearLayout>

            <!-- Finance Widget -->
            <LinearLayout
                android:id="@+id/finance_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:background="@drawable/widget_background"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finance Tracker"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <!-- Balance Card -->
                <LinearLayout
                    android:id="@+id/balance_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/balance_card_ripple"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Balance"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/balance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/monthly_spent_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="This Month: -$0.00"
                            android:textColor="@color/text_secondary"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Input Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/amount_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/input_field_background"
                        android:hint="Enter amount"
                        android:inputType="numberDecimal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_light"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp" />

                    <EditText
                        android:id="@+id/description_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/input_field_background"
                        android:hint="Description (optional)"
                        android:inputType="text"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_light"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/add_income_btn"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_neutral_ripple"
                        android:text="Add Income"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:elevation="4dp" />

                    <Button
                        android:id="@+id/add_expense_btn"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/button_neutral_ripple"
                        android:text="Add Expense"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:elevation="4dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Weekly Usage Graph -->
            <LinearLayout
                android:id="@+id/weekly_usage_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="16dp"
                android:background="@drawable/widget_background"
                android:padding="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Weekly Usage"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_marginBottom="16dp"/>

                <com.guruswarupa.launch.WeeklyUsageGraphView
                    android:id="@+id/weekly_usage_graph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>