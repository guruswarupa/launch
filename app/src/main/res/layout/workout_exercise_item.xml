<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exercise_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Exercise Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/exercise_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Push-ups"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/exercise_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:background="@drawable/widget_background"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/total_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: 0"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/exercise_menu_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="⋮"
            android:textColor="@color/text_secondary"
            android:textSize="20sp"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Exercise options"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Reps-based Exercise Layout -->
    <LinearLayout
        android:id="@+id/reps_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Count Display Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Today's Count (Large) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/today_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/nord7"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Best Day -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/best_day_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best: 0"
                    android:textColor="@color/nord14"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/increment_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="+1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/button_neutral_ripple"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/increment_5_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="+5"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/button_neutral_ripple" />
        </LinearLayout>
    </LinearLayout>

    <!-- Time-based Exercise Layout -->
    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Stopwatch Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/stopwatch_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/nord7"
                android:textSize="36sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/today_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recorded: 0:00"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Stopwatch Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/stopwatch_start_stop"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Start"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_neutral_ripple"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/stopwatch_reset"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Reset"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/button_neutral_ripple"
                android:enabled="false" />
        </LinearLayout>

        <!-- Best Time -->
        <TextView
            android:id="@+id/best_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best: 0:00"
            android:textColor="@color/nord14"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Swipe hint -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drag to reorder • Swipe to delete"
        android:textColor="@color/text_secondary"
        android:textSize="9sp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />

</LinearLayout>
