<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="#2A2B36"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/iv_drag_handle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_sort_alphabetically"
        android:tint="#60FFFFFF"
        android:layout_marginEnd="12dp"/>

    <ImageView
        android:id="@+id/iv_shortcut_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:tint="#FFFFFF"/>

    <TextView
        android:id="@+id/tv_shortcut_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginStart="16dp"/>

    <CheckBox
        android:id="@+id/cb_shortcut_visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#7AA2F7"/>
</LinearLayout>
