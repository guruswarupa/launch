<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="App Icon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/package_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:alpha="0.5"
                android:ellipsize="middle"
                android:maxLines="1"/>
            
            <TextView
                android:id="@+id/sideloaded_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Sideloaded"
                android:textSize="10sp"
                android:textColor="#FFFFBB33"
                android:background="@drawable/rounded_background"
                android:backgroundTint="#20FFBB33"
                android:paddingHorizontal="6dp"
                android:paddingVertical="1dp"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/permission_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/permissions_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="13sp"
        android:textColor="@android:color/white"
        android:alpha="0.8"/>

    <LinearLayout
        android:id="@+id/details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:paddingTop="8dp"
        android:background="@drawable/divider_background">

        <TextView
            android:id="@+id/app_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:alpha="0.7"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/manage_permissions_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Manage Permissions"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:minHeight="0dp"
            android:minWidth="0dp"/>

    </LinearLayout>

</LinearLayout>
