<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Launch" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/text</item>
        <item name="colorOnBackground">@color/text</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColor">@color/text</item>
        
        <!-- Status bar - transparent for blur effect -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar - transparent for blur effect -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Enable edge-to-edge display -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background</item>
        <!-- Use custom translucent popup menu style -->
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
    </style>
    
    <style name="Theme.Launch.Settings" parent="Theme.Launch">
        <!-- Use dark background to match settings screen overlay -->
        <item name="android:windowBackground">@android:color/black</item>
        <!-- Make status bar and navigation bar transparent from the start -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Enable edge-to-edge display -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
</resources>
