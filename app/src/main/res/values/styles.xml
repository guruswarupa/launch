<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorSurface">@color/surfaceColor</item> <!-- Background color -->
        <item name="colorOnSurface">@color/white</item> <!-- Text color -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Rounded corners -->
    </style>
    <style name="TextAppearance.Dialog.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_background</item>
    </style>


    <style name="TextAppearance.Dialog.Item" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Widget text style with background -->
    <style name="WidgetTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/widget_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Time widget style -->
    <style name="TimeWidgetStyle" parent="WidgetTextStyle">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Date widget style -->
    <style name="DateWidgetStyle" parent="WidgetTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Weather widget style -->
    <style name="WeatherWidgetStyle" parent="WidgetTextStyle">
        <item name="android:textSize">12sp</item>
    </style>
</resources>